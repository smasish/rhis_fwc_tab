<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sci.rhis.fwc" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rhislogo"
        android:label="@string/app_name"
        android:clearTaskOnLaunch="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name="org.sci.rhis.fwc.LoginActivity"
            android:label="@string/app_name"
            android:icon="@mipmap/rhislogo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" android:label="@string/appTitle" ></activity>
        <activity android:name=".ANCActivity" android:label="@string/title_activity_anc" ></activity>
        <activity android:name=".DeliveryActivity" android:label="@string/title_activity_delevery" ></activity>
        <activity android:name=".PNCActivity" android:label="@string/title_activity_pnc" ></activity>
        <activity android:name=".NRCActivity" android:label="@string/title_activity_nrc" ></activity>
    </application>

</manifest>
