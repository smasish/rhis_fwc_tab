<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sci.rhis.fwc" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/govtlogo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/title_activity_second"
            android:parentActivityName=".org.sci.rhis.fwc.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sci.rhis.fwc.LoginActivity" />
        </activity>
        <activity
            android:name=".ANCActivity"
            android:label="@string/title_activity_anc" >
        </activity>
        <activity
            android:name=".DeliveryActivity"
            android:label="@string/title_activity_delevery" >
        </activity>
        <activity
            android:name=".PNCActivity"
            android:label="@string/title_activity_pnc" >
        </activity>
    </application>

</manifest>
