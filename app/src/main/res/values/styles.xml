<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="rowHeading">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">#00B7FB</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
               <!-- <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">10sp</item> -->
    </style>
    <style name="rowStyle0">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:background">#819FF7</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:paddingLeft">10sp</item>
    </style>
    <style name="rowStyle1">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:background">#C2E0EC</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>

    </style>
    <style name="CustomTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:icon">@android:color/transparent</item>
        <!--<item name="android:editTextStyle">@style/customEdit</item>-->
        <!--<item name="android:spinnerStyle">@style/customEdit</item>-->
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerItem</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>-->
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#F3F3F3</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">#006699</item>
        <item name="android:background">@drawable/edittext_round</item>
    </style>
    <style name="styleEdittext">
        <item name="android:textColor">@drawable/check_disable</item>
    </style>
    <style name="AppTheme.popUpTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#e1e6ff</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>
