<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    >

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0sp"
       style="@style/rowHeading"
       android:orientation="horizontal"
       android:layout_weight="1">
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/pacBlanLabelLabel"
            style="@style/rowHeading"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PAC History"
            android:id="@+id/pacHistoryLabel"
            style="@style/rowHeading"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal" />
       <Button
           android:id="@+id/deleteLastPacButton"
           android:layout_width="0sp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="DELETE LAST SERVICE"
           android:onClick="deleteLastPAC"
           android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/history_lay"
        android:orientation="vertical"
        android:layout_weight="7"
        >


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/anchistory_fragment"
            android:name="org.sci.rhis.fwc.ANCActivityFragment"
            tools:layout="@layout/fragment_anchistory"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <!-- <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceLarge"
             android:text="New ANC"
             android:id="@+id/newanc_id"
             style="@style/rowHeading"
             android:gravity="center"
             android:layout_marginRight="1sp"
             android:layout_marginTop="1sp"
             android:layout_marginLeft="3sp"
             android:layout_marginBottom="2sp"
             android:layout_centerVertical="true"
             android:layout_gravity="center_horizontal" />-->

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:id="@+id/pacEntryMasterLayout"
        android:layout_weight="10"
        >

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/rowHeading"
            android:text="@string/title_activity_pac"
            android:id="@+id/pacLabelButton"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color"/>

        <ListView
            android:id="@+id/list"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            >
        </ListView>

        <ScrollView
            android:id="@+id/pacLayoutScrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
