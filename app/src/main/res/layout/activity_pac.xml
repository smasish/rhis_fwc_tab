                </LinearLayout>
                <LinearLayout android:id="@+id/pacDisease" android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/pacDiseaseLabel"
                        android:text="@string/disease" android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"/>
                    <org.sci.rhis.fwc.MultiSelectionSpinner
                        android:id="@+id/pacDiseaseSpinner"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp" />
