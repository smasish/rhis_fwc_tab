                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/pacAbdomenLabel"
                        android:text="@string/pac_abdomen"
                        android:textSize="20sp"
