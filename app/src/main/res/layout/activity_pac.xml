                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradient_spinner"
                        android:layout_marginTop="10sp"
                        android:entries="@array/FacilityType_DropDown"
                        android:visibility="gone"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pacServiceDate"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple" >
                    <TextView
                        android:id="@+id/pacServiceDateLabel"
                        android:text="@string/service_date"
                        android:textSize="20sp"
                        android:layout_width="220sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"/>
                    <EditText
                        android:id="@+id/pacServiceDateValue"
                        android:inputType="number"
                        android:hint="dd/mm/yyyy"
                        android:paddingLeft="10sp"
                        android:layout_width="120sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/edittext_round"/>

                    <ImageButton
                        android:id="@+id/Date_Picker_Button"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="10sp"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:onClick="pickDate"
                        android:src="@drawable/calendar_icon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pacDrawback"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
