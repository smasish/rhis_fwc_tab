                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"
                android:layout_marginTop="5sp"
                android:paddingBottom="5sp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fragmentborder">

                <LinearLayout
                    android:id="@+id/pacVisit"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layoutbordersimple">
                    <TextView
                        android:id="@+id/pacVisitLabel"
                        android:text="@string/visit"
                        android:textSize="20sp"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color"  />
                    <TextView
                        android:id="@+id/pacVisitValue"
                        android:text=""
                        android:textSize="20sp"
                        android:layout_width="30sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:textColor="@color/text_color" />
                    <CheckBox
                        android:id="@+id/pacOtherCheckBox"
                        android:inputType="text"
                        android:textSize="20sp"
                        android:layout_width="40sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp" />
                    <TextView
                        android:id="@+id/pacOtherVisit"
                        android:text="@string/other_source"
                        android:textSize="20sp"
                        android:layout_width="100sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginLeft="20sp"
