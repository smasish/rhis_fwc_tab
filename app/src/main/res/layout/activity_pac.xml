                        android:id="@+id/pacBloodPresserValueSystolic"
                        android:inputType="number"
                        android:textSize="20sp"
                        android:paddingLeft="10sp"
                        android:layout_width="80sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
