<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/nrc_layout"
    android:background="@drawable/fragmentborder"
    android:orientation="vertical"
    tools:context=".NRCActivity"
    >
    <HorizontalScrollView
        android:id="@+id/hzScrollNrc"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/clients_intro_layout"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/client_intro_title"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/rowHeading">

            <TextView
                android:id="@+id/TextViewClient_info_tab"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/ClientsIntroFragment"
                android:layout_width="fill_parent"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/name_age"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClient_name"
                android:text="@string/NRCClientsName"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:background="@drawable/edittext_round"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:id="@+id/Client_name"
                android:paddingLeft="10sp"
                />

            <TextView
                android:layout_marginLeft="60sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsAge"
                android:text="@string/NRCClientsAge"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:id="@+id/Clients_Age"
                android:inputType="number"
                android:paddingLeft="10sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/husband_sex"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHusband"
                android:text="@string/ClientsHusband"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:textSize="20sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Husband"
                android:paddingLeft="10sp"
                />

            <TextView
                android:layout_marginLeft="50sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsSex"
                android:text="@string/NRCClientsSex"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/ClientsSexSpinner"
                android:entries="@array/nrcClientsSex"
                android:paddingLeft="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/father_district"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsFather"
                android:text="@string/NRCClientsFather"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapWords"
                android:textSize="20sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Father"
                android:paddingLeft="10sp"
                />
            <TextView
                android:layout_marginLeft="50sp"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsDist"
                android:text="@string/NRCClientsDist"
                android:layout_width="65sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:id="@+id/Clients_District"
                android:paddingLeft="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mother_upazila"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsMother"
                android:text="@string/NRCClientsMother"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>


            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="textCapCharacters"
                android:textSize="20sp"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Mother"
                android:paddingLeft="10sp"
                />
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="20sp"
                android:id="@+id/ClientsUpazila"
                android:text="@string/NRCClientsUpazila"
                android:layout_width="95sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:inputType="text"
                android:textSize="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Upazila"
                android:paddingLeft="10sp"
                />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/union_village"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsUnion"
                android:text="@string/NRCClientsUnion"
                android:layout_width="110sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>
            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Union"
                android:paddingLeft="10sp"
                />

            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="90sp"
                android:id="@+id/TextViewClientsVillage"
                android:text="@string/NRCClientsVillage"
                android:layout_width="125sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <Spinner
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:textSize="20sp"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_spinner"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Clients_Village"
                android:paddingLeft="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/house"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsHouseNo"
                android:text="@string/ClientsHouseNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:id="@+id/Clients_House_No"
                android:inputType="number"
                android:paddingLeft="10sp"
                android:background="@drawable/edittext_round"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/couple_mobile_no"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layoutbordersimple">
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:id="@+id/TextViewClientsMobileNo"
                android:text="@string/ClientsMobileNo"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"/>

            <EditText
                android:layout_marginTop="10sp"
                android:ellipsize="start"
                android:textSize="20sp"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_round"
                android:id="@+id/NrcClients_Mobile_no"
                android:inputType="number"
                android:paddingLeft="10sp"
                />
            <Button
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn2"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:ellipsize="start"
                android:background="@drawable/button_style"
                android:text="MD5result"
                android:visibility="gone"/>

            <Button
                android:layout_marginLeft="40sp"
                android:layout_marginTop="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nrcProceed"
                android:paddingRight="10sp"
                android:paddingLeft="10sp"
                android:ellipsize="start"
                android:background="@drawable/button_style"
                android:text="SAVE"/>
        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/GenericProgressBackground"
        android:id="@+id/loadingPanelNrc"
        >
        <ProgressBar  android:indeterminate="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/progressBar1"></ProgressBar>
    </LinearLayout>
</LinearLayout>


