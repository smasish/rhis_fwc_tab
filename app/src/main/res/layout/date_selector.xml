<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/fragmentborder">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/rowHeading"
            android:text="@string/expressDeliveryBanner"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edd_gravida"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="1sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutbordersimple">
        <TextView
            android:id="@+id/TextViewdelivery_date"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="@string/delivery_date"
            android:textSize="20sp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/id_delivery_date"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:paddingLeft="10sp"
            android:background="@drawable/edittext_round"
            android:inputType="date"
            android:hint="dd/mm/yyyy"/>
        <ImageButton
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:id="@+id/imageViewDeliveryDate"
            android:src="@drawable/calendar_icon"
            android:layout_marginTop="3sp"
            android:tag="DateField"
            android:onClick="pickDate"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/rowHeading"
        android:text="@string/lmpOptionalDailog"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/lmp_para"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layoutbordersimple">

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:id="@+id/TextViewLMPDate"
            android:text="@string/LMPDate"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/estimatedLmpDate"
            android:layout_width="120sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:paddingLeft="10sp"
            android:hint="dd/MM/yyyy"
            android:background="@drawable/edittext_round"
            android:inputType="date"
            style="@style/styleEdittext"/>

        <ImageButton
            android:id="@+id/Date_Picker_Button"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:tag="DateField"
            android:src="@drawable/calendar_icon"
            android:onClick="pickDate"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idButtonPannel"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveEstimatedDeliveryOk"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/saveEstimatedDeliveryCancel"/>

    </LinearLayout>
</LinearLayout>